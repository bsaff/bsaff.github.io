---
interface Props {
  title: string;
}

const { title } = Astro.props;
import "../styles/global.css";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="mobile-web-app-capable" content="yes" />

    <link rel="apple-touch-icon" sizes="180x180" href="/favicon/apple-touch-icon.png" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon/favicon-16x16.png" />
    <link rel="manifest" href="/favicon/site.webmanifest" />
    <link rel="mask-icon" href="/favicon/safari-pinned-tab.svg" color="#5bbad5" />
    <link rel="shortcut icon" href="/favicon/favicon.ico" />
    <meta name="msapplication-TileColor" content="#e0a6a6" />
    <meta name="msapplication-config" content="/favicon/browserconfig.xml" />
    <meta name="theme-color" content="#e0a6a6" />

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Ancizar+Serif:ital,wght@0,300..900;1,300..900&display=swap"
      rel="stylesheet"
    />

    <title>Ben Saff - {title}</title>
  </head>
  <body>
    <main id="app">
      <div class="profile-header">
        <img src="avatar.jpg" alt="Ben avatar" class="avatar" loading="eager" />
      </div>

      <nav class="main-nav">
        <a href="index.html" class={Astro.url.pathname === "/index.html" ? "active" : ""}>Home</a>
        <a href="writing.html" class={Astro.url.pathname === "/writing.html" ? "active" : ""}
          >Writing</a
        >
        <a href="music.html" class={Astro.url.pathname === "/music.html" ? "active" : ""}>Music</a>
      </nav>

      <section class="page active">
        <slot />
      </section>
    </main>
  </body>
</html>
