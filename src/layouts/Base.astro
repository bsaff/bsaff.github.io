---
interface Props {
  title: string;
}

const { title } = Astro.props;
import styles from "./Base.module.css";
import "../styles/global.css";
import NavIcons from "../components/NavIcons.jsx";
const currentPath = Astro.url.pathname;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="mobile-web-app-capable" content="yes" />

    <link rel="apple-touch-icon" sizes="180x180" href="/favicon/apple-touch-icon.png" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon/favicon-16x16.png" />
    <link rel="manifest" href="/favicon/site.webmanifest" />
    <link rel="mask-icon" href="/favicon/safari-pinned-tab.svg" color="#5bbad5" />
    <link rel="shortcut icon" href="/favicon/favicon.ico" />
    <meta name="msapplication-TileColor" content="#e0a6a6" />
    <meta name="msapplication-config" content="/favicon/browserconfig.xml" />
    <meta name="theme-color" content="#e0a6a6" />

    <!-- Preload critical fonts -->
    <link rel="preload" href="/fonts/Outfit-Regular.ttf" as="font" type="font/ttf" crossorigin />
    <link rel="preload" href="/fonts/Outfit-Light.ttf" as="font" type="font/ttf" crossorigin />
    <link rel="preload" href="/fonts/Outfit-Bold.ttf" as="font" type="font/ttf" crossorigin />

    <!-- Preload background image -->
    <link rel="preload" href="/bg.png" as="image" />

    <title>Ben Saff - {title}</title>
  </head>
  <body>
    <main id="app">
      <nav
        class="w-full flex justify-center z-50 backdrop-blur bg-white/50 fixed left-0 right-0 bottom-0 top-auto py-2 sm:sticky sm:top-0 sm:bottom-auto sm:py-4"
      >
        <NavIcons currentPath={currentPath} className={styles.navLinks} />
      </nav>

      <section class="page active">
        <slot />
      </section>
    </main>

    <script type="speculationrules">
      {
        "prerender": [
          {
            "where": {
              "selector_matches": "nav a[href^='/']"
            },
            "eagerness": "moderate"
          }
        ]
      }
    </script>
  </body>
</html>
