---
interface Props {
  title: string;
}

const { title } = Astro.props;
import styles from "./Base.module.css";
import "../styles/global.css";
import { FaHome, FaMusic, FaBook, FaGithub, FaLinkedin } from "react-icons/fa";
const currentPath = Astro.url.pathname;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="mobile-web-app-capable" content="yes" />

    <link rel="apple-touch-icon" sizes="180x180" href="/favicon/apple-touch-icon.png" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon/favicon-16x16.png" />
    <link rel="manifest" href="/favicon/site.webmanifest" />
    <link rel="mask-icon" href="/favicon/safari-pinned-tab.svg" color="#5bbad5" />
    <link rel="shortcut icon" href="/favicon/favicon.ico" />
    <meta name="msapplication-TileColor" content="#e0a6a6" />
    <meta name="msapplication-config" content="/favicon/browserconfig.xml" />
    <meta name="theme-color" content="#e0a6a6" />

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Ancizar+Serif:ital,wght@0,300..900;1,300..900&display=swap"
      rel="stylesheet"
    />

    <title>Ben Saff - {title}</title>
  </head>
  <body>
    <main id="app">
      <nav class={styles.navbar}>
        <ul class={styles.navLinks}>
          <li>
            <a href="/" class={currentPath === "/" ? "active" : ""}>
              <span class="nav-icon"><FaHome /></span>
              <span class="nav-label">HOME</span>
            </a>
          </li>
          <li>
            <a href="/music" class={currentPath === "/music" ? "active" : ""}>
              <span class="nav-icon"><FaMusic /></span>
              <span class="nav-label">MUSIC</span>
            </a>
          </li>
          <li>
            <a href="/writing" class={currentPath === "/writing" ? "active" : ""}>
              <span class="nav-icon"><FaBook /></span>
              <span class="nav-label">WRITING</span>
            </a>
          </li>
          <li>
            <a href="https://github.com/bsaff" target="_blank" rel="noopener">
              <span class="nav-icon"><FaGithub /></span>
              <span class="nav-label">GITHUB</span>
            </a>
          </li>
          <li>
            <a
              href="https://www.linkedin.com/in/benjamin-saff-4678085a/"
              target="_blank"
              rel="noopener"
            >
              <span class="nav-icon"><FaLinkedin /></span>
              <span class="nav-label">LINKEDIN</span>
            </a>
          </li>
        </ul>
      </nav>

      <section class="page active">
        <slot />
      </section>
    </main>
  </body>
</html>
